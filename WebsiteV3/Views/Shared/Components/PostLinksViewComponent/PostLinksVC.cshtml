@model IList<Post>
@{ 

}

<div>
    @foreach (var link in Model)
    {
        <a class="vc-link" asp-controller="Home" asp-action="Blog" asp-route-category="@(link.Category.Id)">
            In @(link.Category.CategoryName)
        </a>
        <a asp-controller="Home" asp-action="Post" asp-route-id="@(link.Id)" asp-route-slug="@(link.Slug)">
            <p class="text-wrap pgh-size-18">@(link.Title)</p>
        </a>
    }
</div>