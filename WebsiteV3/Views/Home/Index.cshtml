@model HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
    ViewBag.Description = "This is the website of Krystal Ruwoldt, a full stack developer with a vast array of skills across many areas of web and software development.";
    ViewBag.Keywords = "portfolio blog web software app development design database middleware ui program code sql c# java python html css bootstrap django asp dotnet opengl";
    var base_path = Context.Request.PathBase;
}

<div class="jumbotron">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <img src="~/content/static/NameLogov2.png" class="img-fluid" />
                <h5>Hey! Welcome to my website!</h5>
                <p>I'm a full stack software and web developer, with a keen interest in hardware too.</p>
                <a asp-controller="Home" asp-action="Portfolio" class="btn btn-primary btn-lg">View My Portfolio</a>
            </div>
            <div class="d-none d-lg-block col-lg-6">
                <p class="text-right"><img src="~/content/static/Avatar2Default.png" class="img-fluid" /></p>
                <h6 class="text-right">germistry &harr; Krystal Ruwoldt</h6>
                <p class="text-right">Interested to know more about me or what I'm currently working on?</p>
                <p class="text-right">
                    <a asp-controller="Home" asp-action="Blog" class="btn btn-outline-primary btn-lg">View My Blog</a>&emsp;
                    <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary btn-lg">View More About Me</a>
                </p>
            </div>
        </div>
    </div>
</div>
@*First 3 Latest Portfolio Items*@
<div class="container-fluid">
    <div class="row text-center">
        <div class="col-12">
            <h2 class="display-4">Latest Projects</h2>
            <hr style="border-top: 1px solid #5C33D6; width: 95%;" />
        </div>
        <div class="col-12" style="padding-bottom: 0.5em;">
            <p class="lead text-center">Check out the latest projects in my portfolio to see what I've been working on most recently..</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row" style="margin-bottom: 5px; padding-left: 1em; padding-right: 1em;">
        @foreach (var portfolioItem in Model.PortfolioItems)
        {
            var image_path = $"/PortfolioItemImage/{portfolioItem.Image}";
            <div class="col-lg-4" style="padding-bottom: 1.5em;">
                <div class="card h-100">
                    <img class="card-img-top" src="@image_path" />
                    <div class="card-body">
                        <h3 class="card-title text-wrap">@portfolioItem.Title</h3>
                        <a style="font-size: 16px; color: #7454D3;" asp-controller="Home" asp-action="Portfolio" asp-route-category="@portfolioItem.Category.Id" asp-route-pageNumber="1">
                            Filed in @portfolioItem.Category.CategoryName
                        </a>
                        <p class="card-text text-justify" style="padding-top: 0.5em">@portfolioItem.Introduction</p>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="PortfolioItem" asp-route-id="@portfolioItem.Id">Read More &rArr;</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@* Category Section *@
<div class="container-fluid">
    <div class="row" style=" padding-top:0.5em; padding-left: 1em; padding-right: 1em;">
        <div class="col-12">
            <a class="text-decoration-none d-block text-center"
               style="  border: 1px solid #0A0A0A;
                        outline: none;
                        background-image: linear-gradient(#3600D8, #0A0A0A);
                        color: #7454D3;
                        font-size: 2.5rem;
                        font-weight: 300;
                        line-height: 1.2;
                        padding-top: 0.5em;
                        padding-bottom: 0.8em;"
               data-toggle="collapse" href="#caticons">Click for Categories &darr;</a>
            <div id="caticons" class="collapse">
                <div class="row" style="padding-top: 2em;">
                    @foreach (var category in Model.Categories)
                    {
                        int postCount = category.Posts.Count();
                        int portfolioItemCount = category.PortfolioItems.Count();
                        var image_path = $"/CategoryImage/{category.Image}";
                        if (postCount > 0 | portfolioItemCount > 0)
                        {
                            <div class="col-xs-12 col-sm-6 col-md-3 text-center" style="padding-bottom: 1em;">
                                <img style="padding-bottom: 0.5em" src="@image_path" title="@(category.CategoryName)" width="128" height="128" />
                                @if (portfolioItemCount != 0)
                                {
                                    <div style="padding-bottom: 0.5em">
                                        <a class="btn btn-sm btn-secondary" asp-controller="Home" asp-action="Portfolio" asp-route-category="@category.Id" asp-route-pageNumber="1">Portfolio Projects</a>
                                    </div>
                                }
                                @if (postCount != 0)
                                {
                                    
                                    <div style="padding-bottom: 0.5em">
                                        <a class="btn btn-sm btn-secondary" asp-controller="Home" asp-action="Blog" asp-route-category="@category.Id" asp-route-pageNumber="1">View Posts</a>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@*Featured Posts*@
<div class="container-fluid">
    <div class="row text-center" style="padding-top: 1.2em">
        <div class="col-12">
            <h2 class="display-4">Featured Posts</h2>
            <hr style="border-top: 1px solid #5C33D6; width: 95%;" />
        </div>
        <div class="col-12" style="padding-bottom: 0.5em;">
            <p class="lead text-center">These featured posts from my blog might be of interest.</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row" style="margin-bottom: 5px; padding-left: 1em; padding-right: 1em;">
        @foreach (var post in Model.Posts)
        {
            var image_path = $"/PostImage/{post.Image}";
            <div class="col-lg-4" style="padding-bottom: 1.5em;">
                <div class="card h-100">
                    <img class="card-img-top" src="@image_path" />
                    <div class="card-body">
                        <h3 class="card-title text-wrap">@post.Title</h3>
                        <a style="font-size: 16px; color: #7454D3;" asp-controller="Home" asp-action="Blog" asp-route-category="@post.Category.Id" asp-route-pageNumber="1">
                            Filed in @post.Category.CategoryName
                        </a>
                        <p class="card-text text-justify" style="padding-top: 0.5em">@post.Introduction</p>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">Read More &rArr;</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



